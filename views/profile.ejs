<%- include('partials/header', { user: user }) %>

<div class="container mt-4">
    <h2>Profile</h2>
    <p>Welcome, <%= user ? user.username : 'Guest' %>!</p>

    <%# User stats will be displayed here %>
    <div id="user-stats">
        <h3>Your Statistics</h3>
        <% if (stats) { %>
            <p>Texts Practiced: <%= stats.textsPracticed %></p>
            <p>Total Practice Time: <%= stats.totalPracticeTime %></p> <%# Example stat %>
            <p>Average Accuracy: <%= stats.averageAccuracy %>%</p> <%# Example stat %>
        <% } else { %>
            <p>No statistics available yet. Start practicing!</p>
        <% } %>
    </div>

</div>

<%- include('partials/footer') %>
